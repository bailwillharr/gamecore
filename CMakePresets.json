{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "description": "Target Windows with the Visual Studio development environment.",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-debug-windows",
      "displayName": "x64 Debug",
      "description": "Profiling off, No optimisation, hot reloading enabled, generate debug symbols",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GC_DEV_BUILD": "ON",
        "GC_PROFILING": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-release-windows",
      "displayName": "x64 Release",
      "description": "Profiling off, Optimisation on, hot reloading enabled, generate debug symbols",
      "inherits": "x64-debug-windows",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "GC_DEV_BUILD": "ON",
        "GC_PROFILING": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-dist-windows",
      "displayName": "x64 Distribution Build",
      "description": "Profiling off, Optimisation on, hot reloading disabled, no symbols",
      "inherits": "x64-debug-windows",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "GC_DEV_BUILD": "OFF",
        "GC_PROFILING": "OFF",
        "GAMECORE_TEMPLATE_WIN32_BUILD": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-dist-profiling-windows",
      "displayName": "x64 Distribution Build With Profiling",
      "description": "Profiling on, Optimisation on, hot reloading disabled, no symbols",
      "inherits": "x64-debug-windows",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "GC_DEV_BUILD": "OFF",
        "GC_PROFILING": "ON",
        "GAMECORE_TEMPLATE_WIN32_BUILD": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },

    {
      "name": "linux-base",
      "description": "Target Linux with clang",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "x64-debug-linux",
      "displayName": "x64 Debug",
      "description": "No optimisation, hot reloading enabled, generate debug symbols",
      "inherits": "linux-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GC_DEV_BUILD": "ON",
		"GC_PROFILING": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "x64-release-linux",
      "displayName": "x64 Release",
      "description": "Optimisation on, hot reloading enabled, generate debug symbols",
      "inherits": "x64-debug-linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "GC_DEV_BUILD": "ON",
		"GC_PROFILING": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "x64-dist-linux",
      "displayName": "x64 Distribution",
      "description": "Optimisation on, hot reloading disabled, no symbols",
      "inherits": "x64-debug-linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
        "GC_DEV_BUILD": "OFF",
		"GC_PROFILING": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "x64-dist-linux-profiling",
      "displayName": "x64 Distribution Profiling",
      "description": "Profiling on, Optimisation on, hot reloading disabled, no symbols",
      "inherits": "x64-debug-linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
        "GC_DEV_BUILD": "OFF",
		"GC_PROFILING": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
 
  ]
}
